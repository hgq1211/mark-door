<div id="purview_d_update">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">权限编辑</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <form class="form-horizontal col-sm-12" method="post" action=" <%-req.url%> ">
                <div class="form-group">
                    <label for="parent" class="col-sm-2 control-label">上级</label>
                    <div class="col-sm-8">
                        <select name="parent" class="form-control">
                            <option value="0" <%if(purview.status === 0){%> selected=""  <%}%>>顶级菜单</option>
                            <option value="1" <%if(purview.status === 1){%> selected=""  <%}%>>系统管理</option>
                            <option value="5" <%if(purview.status === 5){%> selected=""  <%}%>>内容管理</option>
                            <option value="6" <%if(purview.status === 6){%> selected=""  <%}%>>模块管理</option>
                            <option value="7" <%if(purview.status === 7){%> selected=""  <%}%>>SEO优化</option>
                            <option value="32" <%if(purview.status === 32){%> selected=""  <%}%>>个人中心</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="class" class="col-sm-2 control-label">方法</label>
                    <div class="col-sm-8">
                        <input type="class" class="form-control" id="class" name="class" placeholder="方法" value="<%=purview.class%>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="method" class="col-sm-2 control-label">功能</label>
                    <div class="col-sm-8">
                        <textarea rows="3" cols="40" class="form-control" id="method" name="method" placeholder="功能" ><%=purview.method%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">状态</label>
                    <div class="col-sm-8">
                        <label class="radio-inline">
                            <input type="radio" name="status" value="1" <%if(purview.status === 1){%> checked=""  <%}%> >
                            启用
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="status" value="0" <%if(purview.status === 0){%> checked=""  <%}%>>
                            禁用
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="listorder" class="col-sm-2 control-label">顺序</label>
                    <div class="col-sm-4">
                        <input type="listorder" class="form-control" id="listorder" name="listorder" value="<%=purview.listorder%>">
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-8">
                        <button type="submit" class="btn btn-primary">提 交</button>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
    <div class="clearfix"></div>
</div>