<% include ../header.ejs %>
<style type="text/css">
.modal-content{width:800px;}
</style>
<div class="row">
    <div class="col-md-12">
        <div class="box box">
            <div class="box-header with-border">
                <h3 class="box-title">留言列表</h3>
            </div>
            <div class="box-body dataTables_wrapper form-inline dt-bootstrap" >
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <a href="/admin/guestbook/add" class="btn btn-primary">添加留言</a>
                            </div>
                        </div>
                        <hr>
                        <table  class="table table-bordered table-striped dataTable" role="grid" >
                            <thead>
                                <tr role="row">
                                    <th>顺序</th>
                                    <th>ID</th>
                                    <th>标题</th>
                                    <th>姓名</th>
                                    <th>邮箱</th>
                                    <th>电话</th>
                                    <th>提交时间</th>
                                    <th>状态</th>
                                    <th>操作</th>
                                </tr>
                            </thead>    
                            <tbody>
                                <%data.forEach(function(one, key) {%>
                                <tr role="row" class="color-palette">
                                    <td><%=one.listorder%></td>
                                    <td><%=one.id%></td>
                                    <td><%=one.title%></td>
                                    <td><%=one.author%></td>
                                    <td><%=one.email%></td>
                                    <td><%=one.phone%></td>
                                    <td><%=one.createtime%></td>
                                    <td><%=__("guest_status_"+one.status)%></td>
                                    <td>
                                        <a href="/admin/guestbook/update/<%=one.id%>">编辑</a>
                                        <a href="/admin/guestbook/delete/<%=one.id%>" onclick="if(!confirm('删除后不可恢复,确定删除纪录吗?'))return false;">删除</a>
                                    </td>
                                </tr>
                                <%})%>
                            </tbody>
                        </table>
                        
                        <ul class="pagination  no-margin pull-right">
                            <%if(paging.current_page == 1){%>
                                <li><a href="#">«</a></li>
                            <%}else{%>
                                <li><a href="/admin/guestbook?p=<%=(Number(paging.current_page)-1)%>">«</a></li>
                            <%}%>
                            <%for(var i=1;i<=paging.count;i++){%>
                                <li class="<%if(paging.current_page==i){%>active<%}%>"><a href="/admin/guestbook?p=<%=i%>"><%=i%></a></li>
                            <%}%>
                            <%if(paging.current_page == paging.count){%>
                                <li><a href="#">»</a></li>
                            <%}else{%>
                                <li><a href="/admin/guestbook?p=<%=(Number(paging.current_page)+1)%>">»</a></li>
                            <%}%>
                        </ul>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../footer.ejs %>