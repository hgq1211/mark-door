<% include ../header.ejs %>
<style type="text/css">
.modal-content{width:800px;}
</style>
<div class="row">
    <div class="col-md-12">
        <div class="box box">
            <div class="box-header with-border">
                <h3 class="box-title">栏目列表</h3>
            </div>
            <div class="box-body dataTables_wrapper form-inline dt-bootstrap" >
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <a href="/admin/category/add" class="btn btn-primary">添加栏目</a>
                            </div>
                        </div>
                        <hr>
                        <table  class="table table-bordered table-striped dataTable" role="grid" >
                            <thead>
                                <tr role="row">
                                    <th>ID</th>
                                    <th>标题</th>
                                    <th>栏目模型</th>
                                    <th>栏目别名</th>
                                    <th>导航显示</th>
                                    <th>操作</th>
                                </tr>
                            </thead>    
                            <tbody>
                                <%data.forEach(function(one, key) {%>
                                <tr role="row" class="color-palette">
                                    <td><%=one.id%></td>
                                    <td><%=spaceX(one.deep)%><%=one.name%></td>
                                    <td><%=__("model_"+one.model)%></td>
                                    <td><%=one.dir%></td>
                                    <td><%=__("status_"+one.isnavigation)%></td>
                                    <td>
                                        <a href="/admin/category/update/<%=one.id%>">编辑</a>
                                        <a href="/admin/category/delete/<%=one.id%>" onclick="if(!confirm('删除后不可恢复,确定删除纪录吗?'))return false;">删除</a>
                                    </td>
                                </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../footer.ejs %>